<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtaddmahoadon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Mã Hóa Đơn"
        android:inputType="number"
        android:drawableStart="@drawable/ic_bill"
        android:drawableLeft="@drawable/ic_bill"
        android:textSize="15dp"
        android:textStyle="bold"
        android:tag="someTag"
        android:fontFamily="@font/font"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtaddmahoadonchitiet"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Mã Hóa Đơn Chi Tiết"
        android:fontFamily="@font/font"
        android:textSize="15dp"
        android:textStyle="bold"
        android:inputType="number"
        android:layout_below="@+id/txtaddmahoadon"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_bill"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_muasach"
        android:layout_below="@+id/txtaddmahoadonchitiet"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txtaddngaymua"
        android:layout_below="@+id/spinner_muasach"
        android:background="@drawable/ic_date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Năm Tháng Ngày"
        android:id="@+id/tVhienthingaythang"
        android:layout_toRightOf="@id/txtaddngaymua"
        android:layout_below="@+id/spinner_muasach"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        android:fontFamily="@font/font"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtaddsoluong"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Số Lượng"
        android:fontFamily="@font/font"
        android:textSize="15dp"
        android:textStyle="bold"
        android:inputType="number"
        android:layout_below="@+id/txtaddngaymua"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_bill"
        />

</RelativeLayout>