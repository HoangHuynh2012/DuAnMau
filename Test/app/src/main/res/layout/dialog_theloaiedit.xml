<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:text="Sửa Thể Loại"
        android:fontFamily="@font/font"
        android:layout_marginLeft="60dp"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtsuamatheloai"
        android:background="@drawable/et"
        android:ems="10"
        android:enabled="false"
        android:hint="  Nhập Mã Thể Loại"
        android:fontFamily="@font/font"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_matheloaiedit"

        />

    <EditText
        android:id="@+id/txtsuatentheloai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Tên Thể Loại"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_tentheloaiedit"
        android:textSize="15dp"
        android:layout_below="@+id/txtsuamatheloai"
        android:textStyle="bold"
        android:fontFamily="@font/font"
        android:layout_marginTop="20dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtsuavitri"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="     Nhập Vị Trí"
        android:fontFamily="@font/font"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtsuatentheloai"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txtsuavitri"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnsuatheloai"
            android:text="Sửa"
            android:background="@drawable/button"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnhuytheloai"
            android:text="Hủy"
            android:background="@drawable/button"
            ></Button>

    </LinearLayout>

</RelativeLayout>
