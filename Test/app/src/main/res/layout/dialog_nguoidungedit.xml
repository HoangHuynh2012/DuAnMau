<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:padding="20dp"
android:layout_gravity="center"

android:background="@color/white"
android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textview"
    android:text="Sửa Người Dùng"
    android:fontFamily="@font/font"
    android:layout_marginLeft="70dp"
    android:textSize="24dp"
    />

<EditText
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/txtsuausername"
    android:background="@drawable/et"
    android:ems="10"
    android:enabled="false"
    android:hint="   Nhập User Name"
    android:fontFamily="@font/font"
    android:textSize="15dp"
    android:textStyle="bold"
    android:layout_below="@+id/textView"
    android:layout_marginTop="50dp"
    android:drawableLeft="@drawable/ic_adduser"

    />

<EditText
    android:id="@+id/txtsuatennguoidung"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/et"
    android:ems="10"
    android:hint="   Tên Người Dùng"
    android:inputType="textPersonName"
    android:drawableStart="@drawable/ic_id"
    android:drawableLeft="@drawable/ic_id"
    android:textSize="15dp"
    android:layout_below="@+id/txtsuausername"
    android:textStyle="bold"
    android:fontFamily="@font/font"
    android:layout_marginTop="20dp"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtnhappassword"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Mật Khẩu"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_id"
        android:drawableLeft="@drawable/ic_id"
        android:textSize="15dp"
        android:layout_below="@+id/txtsuatennguoidung"
        android:textStyle="bold"
        android:fontFamily="@font/font"
        android:layout_marginTop="20dp"
        />



<EditText
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/txtsuasdt"
    android:background="@drawable/et"
    android:ems="10"
    android:hint="     Nhập Số Điện Thoại"
    android:fontFamily="@font/font"
    android:textSize="15dp"
    android:textStyle="bold"
    android:layout_below="@+id/txtnhappassword"
    android:layout_marginTop="20dp"
    android:drawableLeft="@drawable/ic_phone"
    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/txtsuasdt"
    android:layout_alignParentRight="true"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsuanguoidung"
        android:text="Sửa"
        android:background="@drawable/button"
        ></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnhuynguoidung"
        android:text="Hủy"
        android:background="@drawable/button"
        ></Button>

</LinearLayout>

</RelativeLayout>
