<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">
     <EditText
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:id="@+id/txtaddmatheloai"
         android:background="@drawable/et"
         android:ems="10"
         android:hint="   Nhập Mã Thể Loại"
         android:inputType="number"
         android:drawableStart="@drawable/ic_id"
         android:drawableLeft="@drawable/ic_id"
         android:textSize="15dp"
         android:textStyle="bold"
         android:fontFamily="@font/font"
         android:layout_marginTop="20dp"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtaddtentheloai"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Tên Thể Loại"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_id"
        android:drawableLeft="@drawable/ic_id"
        android:textSize="15dp"
        android:layout_below="@+id/txtaddmatheloai"
        android:textStyle="bold"
        android:fontFamily="@font/font"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtaddvitri"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Vị Trí (Kệ Số)"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_id"
        android:drawableLeft="@drawable/ic_id"
        android:textSize="15dp"
        android:layout_below="@+id/txtaddtentheloai"
        android:textStyle="bold"
        android:fontFamily="@font/font"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>