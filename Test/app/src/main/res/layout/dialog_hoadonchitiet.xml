<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtaddmahoadonchitiet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Mã Hóa Đơn Chi Tiết:"
        android:inputType="number"
        android:drawableStart="@drawable/ic_bill"
        android:drawableLeft="@drawable/ic_bill"
        android:textSize="15dp"
        android:textStyle="bold"
        android:tag="someTag"
        android:fontFamily="@font/font"
        android:layout_marginTop="20dp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sniper_addmuasach"
        android:layout_below="@+id/txtaddmahoadonchitiet"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtaddsoluongmua"
        android:background="@drawable/et"
        android:ems="10"
        android:hint="   Nhập Số Lượng Mua:"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_bill"
        android:drawableLeft="@drawable/ic_bill"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/sniper_addmuasach"
        android:fontFamily="@font/font"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtaddmahoadonmua"
        android:text="abc"
        android:enabled="false"
        android:fontFamily="@font/font"
        android:layout_below="@+id/txtaddsoluongmua"
        android:layout_marginTop="20dp"
        />






</RelativeLayout>